<% if flash[:notice] %>
  <div class="fixed top-16 right-6 z-10 flex items-center gap-3 max-w-xs rounded-lg border border-green-500 bg-green-50 px-4 py-3 text-sm text-green-800 shadow-md animate-fade-out">
    <span><%= flash[:notice] %></span>
  </div>
<% end %>

<% if flash[:alert] %>
  <div class="fixed top-16 right-6 z-10 flex items-center gap-3 max-w-xs rounded-lg border border-red-500 bg-red-50 px-4 py-3 text-sm text-red-800 shadow-md animate-fade-out">
    <span><%= flash[:alert] %></span>
  </div>
<% end %>
