<div class="max-w-3xl mx-auto p-6">
  <div class="flex items-center space-x-4 mb-6">
    <%= image_tag @user.avatar_url, class: 'w-16 h-16 rounded-full object-cover' %>
    <div>
      <h1 class="text-xl font-semibold"><%= @user.name %></h1>
    </div>
  </div>

  <div>
    <h2 class="text-lg font-medium mb-4">登録した記事一覧</h2>
    <% @user.entries.each do |entry| %>
      <div class="border rounded-xl p-4 mb-4 shadow-sm bg-white">
        <div class="mb-2">
          <%= link_to calendar_path(entry.calendar), class: 'text-sm text-blue-500 hover:underline' do %>
            <%= entry.calendar.title %>
          <% end %>
        </div>

        <div>
          <%= link_to entry.title, entry.url, class: 'text-lg font-semibold text-gray-900 hover:underline' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
