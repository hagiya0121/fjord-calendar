<% title "#{@user.name}のマイページ" %>

<div class="max-w-3xl mx-auto p-6">
  <div class="flex items-center space-x-4 mb-6">
    <%= image_tag @user.avatar_url, class: 'w-16 h-16 rounded-full object-cover' %>
    <h1 class="text-xl font-semibold"><%= @user.name %></h1>
  </div>

  <h2 class="text-lg font-medium mb-4">登録した記事一覧</h2>

  <% @user.entries.each do |entry| %>
    <div class="border rounded-xl p-4 mb-4 shadow-sm bg-white space-y-2">
      <%= link_to entry.calendar.title, calendar_path(entry.calendar), class: 'text-sm text-blue-500 hover:underline' %>

      <div class="text-lg font-semibold text-gray-900">
        <%= entry.title %>
      </div>

      <%= render 'entries/link_preview', entry: entry %>
    </div>
  <% end %>
</div>
