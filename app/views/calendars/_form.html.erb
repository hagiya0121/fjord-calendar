  <%= form_with model: calendar, local: true do |form| %>
    <% if calendar.errors.any? %>
      <div class="text-red-500 mb-4">
        <ul>
          <% calendar.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <div class="bg-gray-400 p-2 mb-4">
        <%= form.label :title, class: 'text-xl font-semibold block mb-1' %>
        <%= form.text_field :title, class: 'w-full h-10' %>
      </div>

      <div class="bg-gray-400 p-2 mb-4">
        <%= form.label :description, class: 'text-xl font-semibold block mb-1' %>
        <%= form.text_area :description, class: 'w-full h-96' %>
      </div>

      <div class="bg-gray-400 flex justify-end gap-2">
        <%= form.submit class: 'bg-blue-500 text-white px-4 py-2' %>
        <%= link_to 'キャンセル', calendar, class: 'bg-blue-500 text-white px-4 py-2' %>
        <%= link_to '削除', calendar,
                    data: { turbo_method: :delete, turbo_confirm: 'カレンダーを削除しますか？' },
                    class: 'bg-blue-500 text-white px-4 py-2' %>
      </div>
    </div>
  <% end %>
